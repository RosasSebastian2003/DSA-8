program factorial_recursivo;
var
    n : int;
    resultado : int;

int factorial(x : int) [
    {
        if (x < 2) {
            return 1;
        } else {
            return x * factorial(x - 1);
        };
    }
];

main {
    n = 5;
    resultado = factorial(n);
    print("El factorial de", n, "es:", resultado);
}
end